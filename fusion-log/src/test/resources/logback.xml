<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">
    <include resource="fusion/log/logback/defaults.xml"/>

    <property name="fusion.log.logback.kafka.producer-config"
              value="bootstrap.servers=114.67.85.156:9072,114.67.88.92:9072,114.67.91.200:9072"/>
    <property name="fusion.log.logback.kafka.topic" value="hongka-server-logs-local"/>

    <include resource="fusion/log/logback/kafka-appender.xml"/>
    <include resource="fusion/log/logback/file-appender.xml"/>
    <include resource="fusion/log/logback/console-appender.xml"/>

    <logger name="cn.ihongka" level="DEBUG"/>
    <logger name="ch.qos" level="WARN"/>
    <logger name="slick.jdbc.JdbcBackend.statement" level="DEBUG"/>
    <logger name="slick.jdbc.JdbcBackend.benchmark" level="DEBUG"/>
    <logger name="org.mongodb.driver" level="WARN"/>
    <logger name="net.schmizz.sshj" level="WARN"/>
    <logger name="com.zaxxer" level="WARN"/>
    <logger name="io.getquill" level="WARN"/>
    <logger name="hongka" level="DEBUG"/>
    <logger name="fusion" level="DEBUG"/>
    <logger name="helloscala" level="DEBUG"/>

    <root level="DEBUG">
        <appender-ref ref="console_out"/>
        <!-- <appender-ref ref="file_out" /> -->
        <appender-ref ref="kafka_out"/>
    </root>
</configuration>